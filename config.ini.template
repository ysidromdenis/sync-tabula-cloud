[mysql]
host = tu_host_mysql
user = tu_usuario_mysql
password = tu_password_mysql
database = tu_base_de_datos
port = 3306

[sincronizador]
# Token de autenticación para Tabula Cloud
token = tu_token_aqui
# Intervalo de sincronización en segundos (default: 30)
interval = 30
# URL base de tu instancia de Tabula Cloud
url = tu_dominio.tabula.com.py

[servicio]
# Configuraciones específicas del servicio
# Nivel de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
log_level = INFO
# Archivo de log (opcional, si no se especifica usa la consola)
log_file = tabula_service.log
# Número máximo de reintentos en caso de error
max_retries = 3
# Timeout para conexiones HTTP en segundos
timeout = 30

